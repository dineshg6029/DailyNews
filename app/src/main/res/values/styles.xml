<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="headline_style">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="description_style">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="image_cardview_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/image_height</item>
        <item name="android:layout_margin">@dimen/five_dp</item>
        <item name="android:padding">@dimen/five_dp</item>
        <item name="elevation">@dimen/five_dp</item>
        <item name="cardCornerRadius">@dimen/ten_dp</item>
    </style>
</resources>